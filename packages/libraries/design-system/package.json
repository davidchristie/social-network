{
  "devDependencies": {
    "jest": "23.6.0",
    "rimraf": "2.6.2",
    "ts-jest": "23.10.4",
    "typescript": "3.1.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.+(js|ts|tsx)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "main": "dist/index.js",
  "name": "design-system",
  "private": true,
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "jest --coverage --maxWorkers 2 --verbose"
  },
  "version": "1.0.0"
}
