{
  "dependencies": {
    "dotenv": "6.1.0",
    "graphql-yoga": "1.16.2",
    "node-fetch": "2.2.0"
  },
  "devDependencies": {
    "@types/jest": "23.3.7",
    "@types/node-fetch": "2.1.2",
    "jest": "23.6.0",
    "nodemon": "1.18.5",
    "rimraf": "2.6.2",
    "ts-jest": "23.10.4",
    "tslint": "5.11.0",
    "typescript": "3.1.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.+(js|ts|tsx)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "name": "public-api",
  "private": true,
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "tslint --project .",
    "start": "nodemon -e ts,graphql -x ts-node -r dotenv/config src/index.ts dotenv_config_path=../../.env",
    "test": "jest --coverage --maxWorkers 2 --verbose"
  },
  "version": "1.0.0"
}
