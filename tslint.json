{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "interface-name": false,
    "jsx-key": false,
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "no-console": false,
    "no-empty-interface": false,
    "semicolon": true,
    "space-before-function-paren": true,
    "trailing-comma": [
      true,
      {
        "esSpecCompliant": true,
        "multiline": {
          "arrays": "always",
          "objects": "always"
        }
      }
    ],
    "quotemark": [
      true,
      "double",
      "jsx-double"
    ]
  }
}
